{
  "productName": "PhotoChooser",
  "directories": {
    "output": "release/",
    "buildResources": "build"
  },
    "files": [
        "**/*",
        "icon.ico",
        "!*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!.angular-cli.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
      "!node_modules/exiftool-vendored/node_modules/exiftool-vendored.pl/**"
    ],
  "extraFiles": [
    {
      "from": "node_modules/exiftool-vendored/node_modules/exiftool-vendored.pl",
      "to": "dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "build/icon.ico",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "build/icon_512_1.png",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
